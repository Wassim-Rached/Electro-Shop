{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.status }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>IsUsed</th>
                <td>{{ product.isUsed ? 'Yes' : 'No' }}</td>
            </tr>
        <tr>
            <th>created_by</th>
            <td>{{ product.createdBy.username }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    {% if app.user and product.createdBy.id != app.user.id  %}
        <a href="{{ path('app_command_new', {'id': product.id}) }}">command</a>
        {{ include('product/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
