{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.status }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>IsUsed</th>
                <td>{{ product.isUsed ? 'Yes' : 'No' }}</td>
            </tr>
        <tr>
            <th>created_by</th>
            <td>{{ product.createdBy.username }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    {% if app.user and app.user.username != 'admin' %}
        {% if product.createdBy.id == app.user.id %}
            {{ include('product/_delete_form.html.twig') }}
        {% else %}
        <a href="{{ path('app_command_new', {'id': product.id}) }}">command</a>
{#            report#}
            <a href="{{ path('app_product_report_new', {'id': product.id}) }}">report</a>
        {% endif %}
    {% endif %}

    {% if app.user and app.user.username == 'admin' %}
        <a href="{{ path('app_admin_products_accept', {'id': product.id}) }}">accept</a>
        <a href="{{ path('app_admin_products_refuse', {'id': product.id}) }}">refuse</a>
    {% endif %}

{% endblock %}
